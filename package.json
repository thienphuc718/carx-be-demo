    "aws-sdk": "^2.1116.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "crypto-js": "^4.1.1",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.3.6",
    "dotenv": "^16.0.0",
